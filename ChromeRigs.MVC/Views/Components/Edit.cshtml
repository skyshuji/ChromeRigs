@using ChromeRigs.MVC.Models.Components
@model CreateUpdateComponentViewModel

@{
    ViewData["Title"] = "Edit Component";
}

<div class="container">

    <h1>
        Edit Component
        <span class="text-chromerigs-color">
            @Model.Name
        </span>
    </h1>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">

                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <label asp-for="Name" class="control-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>


                </div>

                <div class="form-group">

                    <div class="form-floating mt-2">
                        <input asp-for="Price" class="form-control" placeholder="Price" />
                        <label asp-for="Price" class="control-label"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group mt-4">

                    <input type="submit" value="Save" class="btn btn-chromerigs-color" />
                    <a class="btn btn-secondary ms-2" asp-action="Index">Cancel</a>

                </div>

            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
