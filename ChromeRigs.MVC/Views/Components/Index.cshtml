@using ChromeRigs.MVC.Models.Components
@model IEnumerable<ComponentViewModel>

@{
    ViewData["Title"] = "Components";
}

<div class="container">
    <h1>Components</h1>
    <hr />

    <p>
        <a asp-action="Create" class="btn btn-primary">Create a New Component</a>
    </p>

    <hr />

    <table class="table table-striped table-hover data-tables">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-start">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var component in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => component.Name)
                    </td>
                    <td class="text-start">
                        <span>$</span>@Html.DisplayFor(modelItem => component.Price)
                    </td>
                    <td>
                        <a class="text-decoration-none" asp-action="Edit" asp-route-id="@component.Id" title="Edit">
                            <i class="fa-solid fa-pen text-primary"></i>
                        </a>

                        <a class="text-decoration-none ms-2" asp-action="Details" asp-route-id="@component.Id" title="Details">
                            <i class="fa-solid fa-circle-info text-info"></i>
                        </a>

                        <a class="text-decoration-none ms-2" asp-action="Delete" asp-route-id="@component.Id" title="Delete"
                           data-bs-toggle="modal" data-bs-target="#delete_@component.Id">
                            <i class="fa-solid fa-trash text-danger"></i>
                        </a>

                        <!-- Delete Modal -->
                        <div class="modal fade" id="delete_@component.Id" tabindex="-1" aria-labelledby="delete_@component.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="deleteModalLabel">Delete Component</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">

                                        <h5>
                                            Are you sure you want to delete component
                                            <span class="text-danger">
                                                @component.Name
                                            </span>?
                                        </h5>

                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Delete">
                                            <input type="hidden" name="id" value="@component.Id" />
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger ms-1">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>