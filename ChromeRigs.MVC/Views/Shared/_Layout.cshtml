<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChromeRigs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.datatables.net/2.1.7/css/dataTables.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/ChromeRigs.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <a class="navbar-brand fw-bold text-chromerigs-color" title="Home Page" asp-area="" asp-controller="Home" asp-action="Index">
                    <img height="40px" class="align-content-center" src="/imgs/chromerigs.png" />
                    ChromeRigs
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Components" asp-action="Index">Components</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PCs" asp-action="Index">PCs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer>

        <div class="site-map">

            <div class="container py-5">

                <div class="row g-4">

                    <div class="col-lg-6 col-xl-3">

                        <div class="text-body-secondary">
                            <h3 class="text-dark">ChromeRigs</h3>
                            <div>441-1001, Nishishinjuku Shinjuku Sukueatawa(24-kai)</div>
                            <div>Tokyo, Shinjuku-ku</div>
                            <div>Japan</div>

                            <div class="mt-4">
                                <label for="phone" class="fw-bold">Phone:</label>
                                <a id="phone" class="text-decoration-none text-chromerigs-color a-hover"
                                   href="tel:+81000000000">+81000000000</a>
                            </div>
                            <div>
                                <label for="email" class="fw-bold">Email:</label>
                                <a id="email" class="text-decoration-none text-chromerigs-color a-hover"
                                   href="mailto:chromerigs@gmail.com">chromerigs@gmail.com</a>
                            </div>
                        </div>

                    </div>

                    <div class="col-lg-6 col-xl-3">

                        <h6 class="fw-bold mb-3">Useful Links</h6>

                        <ul class="nav flex-column">
                            <li class="nav-item mb-2">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-chromerigs-color me-1"></i>
                                    Home
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-chromerigs-color me-1"></i>
                                    About Us
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-chromerigs-color me-1"></i>
                                    Services
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-chromerigs-color me-1"></i>
                                    Term of Service
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-chromerigs-color me-1"></i>
                                    Privacy Policy
                                </a>
                            </li>
                        </ul>

                    </div>

                    <div class="col-lg-6 col-xl-3">

                        <h6 class="fw-bold mb-3">Our Services</h6>

                        <ul class="nav flex-column">
                            <li class="nav-item mb-2">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-chromerigs-color me-1"></i>
                                    Home
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-chromerigs-color me-1"></i>
                                    About Us
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-chromerigs-color me-1"></i>
                                    Services
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-chromerigs-color me-1"></i>
                                    Term of Service
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a href="#" class="nav-link p-0 text-body-secondary">
                                    <i class="fa-solid fa-chevron-right text-chromerigs-color me-1"></i>
                                    Privacy Policy
                                </a>
                            </li>
                        </ul>

                    </div>

                    <div class="col-lg-6 col-xl-3">

                        <h6 class="fw-bold mb-3">Follow us on Social Media</h6>
                        <p>Monthly updates on new Codes, Components, PC's ETC!'.</p>

                        <div class="social-links d-flex gap-2">

                            <a href="https://www.x.com" target="_blank" class="social-link text-light rounded-circle">
                                <i class="fa-brands fa-x-twitter"></i>
                            </a>

                            <a href="https://www.facebook.com" target="_blank"
                               class="social-link text-light rounded-circle">
                                <i class="fa-brands fa-facebook"></i>
                            </a>

                            <a href="https://www.instagram.com" target="_blank"
                               class="social-link text-light rounded-circle">
                                <i class="fa-brands fa-instagram"></i>
                            </a>
                        </div>

                    </div>

                </div>

            </div>

        </div>

        <div class="copy-right bg-section">

            <div class="container">

                <div class="d-flex justify-content-between fs-7 py-3">

                    <div>
                        &copy; Copyright <span class="fw-bold">ChromeRigs.</span> All Rights Reserved.
                    </div>

                    <div>
                        Designed By <a href="#" class="text-chromerigs-color">ChromeRigs</a>
                    </div>

                </div>

            </div>

        </div>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.7/js/dataTables.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
