@using ChromeRigs.MVC.Models.PCs
@model CreateUpdatePCViewModel

@{
    ViewData["Title"] = "Create PC";
}

<div class="container">
    <h1>Create PC</h1>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <label asp-for="Name" class="control-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <div class="form-floating">
                        <input asp-for="Description" class="form-control" placeholder="Description" />
                        <label asp-for="Description" class="control-label"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <div class="form-floating">
                        <select asp-for="ComponentsIds" class="form-control select-2" placeholder="Components" asp-items="@Model.ComponentLookup"></select>
                        <label asp-for="ComponentsIds" class="control-label"></label>
                        <span asp-validation-for="ComponentsIds" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-chromerigs-color" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
