@using ChromeRigs.MVC.Models.Customers
@using ChromeRigs.Utils.Enums
@model CreateUpdateCustomerViewModel

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container">

    <h1>
        Edit Customer
        <span class="text-chromerigs-color">
            @Model.FirstName @Model.LastName
        </span>
    </h1>

    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

<div class="row">

                <div class="col-md-4">

                    <div class="form-group">
                        <div class="form-floating">
                        <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                        <label asp-for="FirstName" class="control-label"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="col-md-4">
                    
                    <div class="form-group">
                        <div class="form-floating">
                        <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                        <label asp-for="LastName" class="control-label"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="col-md-4">

                    <div class="form-group">
                        <div class="form-floating">
                        <input asp-for="MobileNumber" class="form-control" placeholder="Mobile Number" />
                        <label asp-for="MobileNumber" class="control-label"></label>
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>
                    </div>

                </div>

            </div>

            <div class="row mt-3">

                <div class="col-md-4">

                    <div class="form-group">
                        <div class="form-floating">
                        <input asp-for="Address" class="form-control" placeholder="Address" />
                        <label asp-for="Address" class="control-label"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>'
                        </div>
                    </div>

                </div>

                <div class="col-md-4">
                    
                    <div class="form-group">
                        <div class="form-floating">
                        <select asp-for="Gender" class="form-control select-2" asp-items="@Html.GetEnumSelectList<Gender>()"></select>
                        <label asp-for="Gender" class="control-label"></label>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="col-md-4">

                    <div class="form-group">
                        <div class="form-floating">
                        <input asp-for="DateOfBirth" class="form-control" placeholder="Date Of Birth" />
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>

                </div>

            </div>

        <div class="form-group mt-4">

            <input type="submit" value="Save" class="btn btn-chromerigs-color" />
            <a class="btn btn-secondary ms-2" asp-action="Index">Cancel</a>

        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
